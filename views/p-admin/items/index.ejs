<% include ../../shared/header %>

<div class="ts-container">
  <div class="ts-padding-lg">
    <form method="get" name="items-form" class="ts-form">
      <div class="ts-row ts-form-row">
        <div class="ts-col-span6">
          <a href="/p-admin/content/items/new" class="ts-button">New Item</a>
        </div>
        <div class="ts-col-span6">
          <input class="ts-col-span10" type="search" name="search" placeholder="search"/>
          <button class="ts-button" type="submit">Search</button>
        </div>
      </div> 
    </form>
  </div>
<div class="ts-row">
  <div class="ts-col-span12">
   <div class="ts-padding-lg">
        <table class="ts-table ts-table-padding-md ts-text-left ts-table-border ts-width-100 ts-sans-serif">
          <thead class="ts-table-head ts-text-primary-text-color">
            <tr>
              <th colspan="3" class="ts-text-left ts-text-primary-text-color">
                Page

                <input type="text" name="pagenum" class="ts-text-center autoFormSubmit" style="width:2em;" value="1">
                of 
                <%if(itempages !== 0){%>
                <%= itempages %> 
                <%}else{%>
                <%= 1 %> 
                <%}%>
              </th>
              <th colspan="4" class="ts-text-right "> 
                <a href="/p-admin/items" class="ts-text-primary-text-color">Reset Filters</a>

                | 
                <span>

                  <select name="itemsperpage" class="autoFormSubmit">

                    <option value="15">15</option>

                    <option value="30">30</option>

                    <option value="50">50</option>

                  </select> per page
                </span> | 
                <span><%= itemscount %> items</span>

              </th>
            </tr>
            <tr>
              <th>Title</th>
              <td>Author</td>
              <td>Categories</td>
              <td>Tags</td>
              <td>Type</td>
              <td>Date</td>
              <td>Edit</td>
            </tr>
          </thead>

          <tbody class="ts-table-body">
          <% console.log(items)%>
          <% for(var i=0; i < items.length; i++) { %>
          <tr>
            <td><%= items[i].title %></td>
            <td><%= items[i].author %></td>
            <td><%= items[i].categories %></td>
            <td><%= items[i].tags %></td>
            <td><%= items[i].type %></td>
            <td><small><%= items[i].date %></small></td>
            <td>
            <a href="/p-admin/item/edit/introducing-periodic" class="ts-button"> edit </a>
            <a href="/item/introducing-periodic" class="ts-button " target="_blank"> i </a>
            <a data-href="/item/introducing-periodic/delete" class="ts-button" 
              data-successfunction="backToItemLanding">x
            </a>
          </td>
            
          </tr>
          <% } %>
          </tbody>
          <tfoot class="ts-table-foot">
            <tr>
              <th colspan="3" class="ts-text-left ">
                Page

                1
                of
                <%if(itempages !== 0){%>
                <%= itempages %> 
                <%}else{%>
                <%= 1 %> 
                <%}%>

              </th>
              <th colspan="4" class="ts-text-right "> 
                <a href="/p-admin/items">Reset Filters</a>

              </th>
            </tr>
          </tfoot>
        </table>
      </div> 
  </div>
</div>
  <script type="text/javascript" defer>
window.showStylieNotification({message:'item admin js'});
  </script>
</div>
<% include ../../shared/footer %>
